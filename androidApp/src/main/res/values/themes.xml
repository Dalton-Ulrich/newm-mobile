<resources>

    <style name="Theme.ProjectNewm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="newmTextStyleBody1">@style/NewmTextStyle.Body1</item>
        <item name="newmTextStyleHeading1">@style/NewmTextStyle.Heading1</item>
        <item name="newmTextStyleTitle1">@style/NewmTextStyle.Title1</item>

        <item name="newmDividerWidth">@dimen/divider_width</item>
        <item name="newmSpacing0dp">@dimen/spacing_0</item>
        <item name="newmSpacing4dp">@dimen/spacing_4</item>
        <item name="newmSpacing8dp">@dimen/spacing_8</item>
        <item name="newmSpacing12dp">@dimen/spacing_12</item>
        <item name="newmSpacing16dp">@dimen/spacing_16</item>
        <item name="newmSpacing24dp">@dimen/spacing_24</item>
        <item name="newmSpacing32dp">@dimen/spacing_32</item>
        <item name="newmSpacing40dp">@dimen/spacing_40</item>
        <item name="newmSpacing48dp">@dimen/spacing_48</item>

        <item name="newmBackgroundDark">@color/black</item>
    </style>

    <style name="Theme.ProjectNewm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjectNewm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProjectNewm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ProjectNewm.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ProjectNewm.NoActionBar</item>
    </style>
</resources>